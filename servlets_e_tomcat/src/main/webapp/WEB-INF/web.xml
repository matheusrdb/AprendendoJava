<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>gerenciador</display-name>
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>MF</filter-name>
        <filter-class>br.com.gerenciador.servlet.FilterDeMonitoramento</filter-class>
    </filter>
    <filter>
        <filter-name>AF</filter-name>
        <filter-class>br.com.gerenciador.servlet.FilterAuthentication</filter-class>
    </filter>
    <filter>
        <filter-name>CF</filter-name>
        <filter-class>br.com.gerenciador.servlet.ControlatorFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MF</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AF</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CF</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

</web-app>